---
// src/pages/about.astro
import BaseLayout from "../layouts/BaseLayout.astro";

const techStack = {
  Frontend: [
    "Astro.js",
    "React.js",
    "Vue.js",
    "Tailwind CSS v4",
    "HTML5",
    "CSS3",
    "JavaScript (ES6+)",
  ],
  Backend: [
    "Node.js",
    "Express.js",
    "NestJS",
    "MongoDB",
    "PostgreSQL",
    "REST APIs",
    "GraphQL",
  ],
  DevOps: [
    "Docker",
    "GitHub Actions",
    "CI/CD Pipelines",
    "AWS",
    "Vercel",
    "Netlify",
  ],
};
---

<BaseLayout>
  <section>
    <!-- HERO -->
    <div class="mx-auto max-w-7xl px-2 py-24 text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold">
        Senior <span class="text-blue-500">Full Stack Developer</span>
      </h1>
      <p class="mt-6 text-lg sm:text-xl max-w-3xl mx-auto">
        I build scalable, high-performance web applications with modern frontend
        and backend technologies. Passionate about clean architecture,
        performance optimization, and developer experience.
      </p>
    </div>

    <!-- PROFILE + EXPERIENCE -->
    <div class="mx-auto max-w-7xl px-2 py-16">
      <!-- About -->
      <div class="space-y-6">
        <h2 class="text-3xl font-bold text-center">About Me</h2>
        <p class="text-center leading-relaxed">
          I am a results-driven Full Stack Developer with expertise in building
          modern web applications using Astro, React, Node.js, and cloud-native
          technologies. I focus on performance-first architecture and scalable
          backend systems.
        </p>
        <p class="text-center leading-relaxed">
          With strong problem-solving skills and production experience, I create
          applications that are fast, maintainable, and future-proof.
        </p>
      </div>

      <!-- Experience Stats -->
      <div class="grid grid-cols-2 sm:grid-cols-2 gap-6">
        <div
          class="rounded-xl border border-gray-100 bg-gray-200 p-6 text-center hover:scale-105 transition duration-500"
        >
          <h3 class="text-3xl font-bold text-blue-500">5+</h3>
          <p class="mt-2 text-sm">Years Experience</p>
        </div>
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-6 text-center hover:scale-105 transition duration-500"
        >
          <h3 class="text-3xl font-bold text-blue-500">30+</h3>
          <p class="mt-2 text-sm">Projects Delivered</p>
        </div>
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-6 text-center hover:scale-105 transition duration-500"
        >
          <h3 class="text-3xl font-bold text-blue-500">15+</h3>
          <p class="mt-2 text-sm">Technologies Mastered</p>
        </div>
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-6 text-center hover:scale-105 transition duration-500"
        >
          <h3 class="text-3xl font-bold text-blue-500">100%</h3>
          <p class="mt-2 text-sm">Client Satisfaction</p>
        </div>
      </div>
    </div>

    <!-- TECH STACK -->
    <div class="mx-auto max-w-7xl px-2 py-20">
      <h2 class="text-3xl font-bold text-center">Technology Stack</h2>
      <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          Object.entries(techStack).map(([category, items]) => (
            <div class="rounded-xl border border-gray-100 bg-gray-200 p-6 hover:scale-105 transition duration-500">
              <h3 class="text-lg text-center font-semibold text-blue-400">
                {category}
              </h3>
              <ul class="mt-4 space-y-2 text-sm text-center">
                {items.map((item) => (
                  <li class="transition">{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>

    <!-- SERVICES -->
    <div class="mx-auto max-w-7xl px-6 py-20">
      <h2 class="text-3xl font-bold text-center">What I Deliver</h2>
      <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-8 hover:scale-105 transition duration-500"
        >
          <h3 class="text-xl font-semibold">Modern Frontend Apps</h3>
          <p class="mt-4 text-sm">
            SEO-optimized, performance-first applications using Astro, React,
            and Tailwind CSS.
          </p>
        </div>
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-8 hover:scale-105 transition"
        >
          <h3 class="text-xl font-semibold">Robust Backend Systems</h3>
          <p class="mt-4 text-sm">
            Scalable REST & GraphQL APIs built with Node.js and secure
            authentication flows.
          </p>
        </div>
        <div
          class="rounded-2xl border border-gray-100 bg-gray-200 p-8 hover:scale-105 transition"
        >
          <h3 class="text-xl font-semibold">Deployment & DevOps</h3>
          <p class="mt-4 text-sm">
            CI/CD pipelines, Dockerized environments, and optimized cloud
            deployments.
          </p>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="mx-auto max-w-6xl px-6 pb-24">
      <div
        class="rounded-2xl bg-gray-200 p-12 text-center hover:scale-105 transition duration-500"
      >
        <h2 class="text-3xl font-bold text-white">
          Let's Build Something Scalable
        </h2>
        <p class="mt-4">
          Available for freelance, remote roles, and collaboration.
        </p>
        <a
          href="#"
          class="mt-8 inline-block rounded-xl bg-white px-8 py-3 font-semibold text-blue-600 transition hover:bg-blue-200"
        >
          Contact Me
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
